<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mini Spotify</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    body {
      background-color: #1c1c1c;
      color: #ffffff;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      flex-direction: column;
    }

    h1 {
      margin-bottom: 20px;
      font-size: 3rem;
      color: #1db954;
    }

    form {
      background-color: #333;
      padding: 20px;
      border-radius: 10px;
      margin-bottom: 30px;
      width: 100%;
      max-width: 500px;
    }

    input[type="file"] {
      color: #fff;
      margin-bottom: 10px;
    }

    button {
      background-color: #1db954;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    button:hover {
      background-color: #14833b;
    }

    .playlist {
      width: 100%;
      max-width: 500px;
      background-color: #282828;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
    }

    .playlist h2 {
      margin-bottom: 15px;
      font-size: 1.5rem;
      color: #1db954;
    }

    .playlist ul {
      list-style: none;
    }

    .playlist li {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #333;
      margin-bottom: 10px;
      padding: 15px;
      border-radius: 5px;
      transition: background-color 0.3s;
    }

    .playlist li:hover {
      background-color: #404040;
    }

    .playlist li strong {
      color: #fff;
    }

    audio {
      margin-left: 10px;
    }

    p {
      color: #b3b3b3;
    }
  </style>
</head>
<body>
  <h1>Mini Spotify</h1>

  <form action="/upload" method="POST" enctype="multipart/form-data">
    <input type="file" name="music" accept="audio/*" required>
    <button type="submit">Upload</button>
  </form>

  <div class="playlist">
    <% if (songs.length > 0) { %>
      <h2>Your Playlist</h2>
      <ul>
        <% songs.forEach(song => { %>
          <li>
            <strong><%= song.title %></strong>
            <audio controls>
              <source src="<%= song.file_path %>" type="audio/mpeg">
              Your browser does not support the audio tag.
            </audio>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No songs uploaded yet.</p>
    <% } %>
  </div>
</body>
</html>
